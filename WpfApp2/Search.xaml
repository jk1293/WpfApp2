<Window x:Class="WpfApp2.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Search" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <TextBlock Grid.Row="2" x:Name="text" TextAlignment="Center" Height="30" Width="500" HorizontalAlignment="Center"/>
        <TextBox x:Name="team1" VerticalContentAlignment="Center" Grid.Row="3" Height="30" Width="300" KeyDown="OnKeyDownHandler" />
        
    </Grid>
</Window>
